package orpheus.controls.ui {	import orpheus.movieclip.Frame;		import orpheus.controls.ui.events.CheckBoxEvent;			import flash.display.DisplayObject;		import flash.display.SimpleButton;		import flash.events.MouseEvent;		import flash.display.MovieClip;	/**	 * @author philip	 */	dynamic public class CheckBox extends MovieClip 	{		private var _checked:Boolean = false;		private var _active:Boolean = true;		private var _value:* = null;		private var _btn:DisplayObject;		private var _radioButton:Boolean = false;		public function CheckBox()		{			_btn = getChildByName("btn") as SimpleButton;			if (!_btn)			{				_btn = this;				this.buttonMode = true;				this.mouseChildren = false;			}						this.gotoAndStop(1);			_btn.addEventListener(MouseEvent.MOUSE_DOWN, selectHandler);		}				private function selectHandler(event:MouseEvent):void		{			if (_checked && _radioButton) return;			checked = !checked;			dispatchEvent(new CheckBoxEvent(_value, CheckBoxEvent.CHANGE));		}		public function get checked():Boolean		{			return _checked;		}				public function set checked(checked:Boolean):void		{			_checked = checked;			Frame.control(this, _checked ? totalFrames : 1);		}				public function get active():Boolean		{			return _active;		}				public function set active(active:Boolean):void		{			_active = active;			if (_btn is MovieClip)			{				this.buttonMode = _active;			}			this.mouseEnabled = _active;		}				public function get value():*		{			return _value;		}				public function set value(value:*):void		{			_value = value;		}				public function get radioButton():Boolean		{			return _radioButton;		}				public function set radioButton(radioButton:Boolean):void		{			_radioButton = radioButton;		}	}}