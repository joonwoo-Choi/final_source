package orpheus.controls.Scrollbar {	import flash.events.Event;		/**	 * @author philip	 */	public class ScrollerEvent extends Event 	{		public static const MOVE:String = "moveScrollBtn";		public static const STOP:String = "stopScroll";		public var rate:Number;		public var direct:Boolean;				public function ScrollerEvent(type:String, moveRate:Number = 0, _direct:Boolean = false, bubbles:Boolean = false, cancelable:Boolean = false)		{			super(type, bubbles, cancelable);			rate = moveRate;			direct = _direct;		}				override public function clone():Event		{			return new ScrollerEvent(type, rate, direct, bubbles, cancelable);		}	}}