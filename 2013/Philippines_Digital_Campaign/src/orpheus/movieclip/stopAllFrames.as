package orpheus.movieclip{	import flash.display.DisplayObjectContainer;		import flash.display.MovieClip;			/**	 * @author philip	 */	public function stopAllFrames(mc:DisplayObjectContainer):void	{		if (!(mc is DisplayObjectContainer)) return;				for(var i:uint = 0; i < mc.numChildren; i++)		{			var _mc:DisplayObjectContainer = mc.getChildAt(i) as DisplayObjectContainer;			if (_mc)			{				if (_mc is MovieClip) MovieClip(_mc).stop();				if (_mc.numChildren > 0) stopAllFrames(_mc);			}		}	}}