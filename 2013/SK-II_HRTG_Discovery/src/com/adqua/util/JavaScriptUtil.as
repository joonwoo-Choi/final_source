package com.adqua.util {	import com.adqua.system.SecurityUtil;		import flash.external.ExternalInterface;
	public class JavaScriptUtil {		static public function call( $jsFun:String, ... args ):void {			if( SecurityUtil.isWeb() ) {		       		if( ExternalInterface.available ) ExternalInterface.call.apply( null, [ $jsFun ].concat( args ) );			} else {				trace( "[ "+$jsFun+" ] "+args );			}		}		static public function callBack( $jsFun:String, $cbkFn:Function ):void {			if( ExternalInterface.available ) ExternalInterface.addCallback( $jsFun, $cbkFn );		}		static public function alert( $str:String ):void {			if( SecurityUtil.isWeb() ) ExternalInterface.call( "alert", $str );			else trace( $str );		}	}}