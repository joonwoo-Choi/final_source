package orpheus.graphics{	import flash.geom.Point;		import flash.display.Graphics;	public class Draw	{		public function Draw():void		{			trace("Draw is a static class and should not be instantiated.");		}		public static function drawArc(graphics:Graphics, cx:Number = 0, cy:Number = 0, radius:Number = 100, sAngle:Number = 0, eAngle:Number = 0, cw:Boolean = true, drawLine:Boolean = true, seg:Number = 1):Point		{			if (drawLine) graphics.moveTo(cx, cy);			if (!cw)			{				var tmp:Number = sAngle;				sAngle = eAngle;				eAngle = tmp;			}						eAngle += sAngle < eAngle ? 0 : 360;						var p:Point;			for(var i:Number = sAngle; i <= eAngle; i += seg)			{				p = Point.polar(radius, i / 180 * Math.PI);				p.offset(cx, cy);				if (!drawLine && i == sAngle) graphics.moveTo(p.x, p.y);				else graphics.lineTo(p.x, p.y);			}			if (i != eAngle)			{				p = Point.polar(radius, eAngle / 180 * Math.PI);				p.offset(cx, cy);				graphics.lineTo(p.x, p.y);			}						if (drawLine) graphics.lineTo(cx, cy);						return p;		}	}}