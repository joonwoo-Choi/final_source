package orpheus.system {	import orpheus.utils.StringUtil;	import flash.display.DisplayObject;	import flash.display.LoaderInfo;	import flash.system.Security;	/**	 * MZ Package 1.0	 * @author INEX	 */	public class SecurityUtil	{ 		//SWF 파일이 있는 디랙토리 경로를 반환합니다.		public static function getPath(obj:DisplayObject):String		{			var _url:String = String(LoaderInfo(obj.loaderInfo).url);			_url = StringUtil.getDirectory(_url); 			return _url; 		}		//현재 실행되고 있는 환경이 웹경로인지 로컬 플래시 플레이어인지를 리턴함		public static function isWeb():Boolean		{			if (Security.sandboxType == Security.REMOTE)			{				return true;			}			else			{				return false;			}		}	}}